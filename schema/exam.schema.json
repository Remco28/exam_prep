{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schema/exam.schema.json",
  "title": "Exam",
  "type": "object",
  "required": ["id", "title", "timeLimit", "sections"],
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "title": { "type": "string", "minLength": 1 },
    "timeLimit": { "type": "integer", "minimum": 1 },
    "sections": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "questions"],
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "questions": {
            "type": "array",
            "minItems": 1,
            "items": { "$ref": "#/definitions/question" }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false,
  "definitions": {
    "difficulty": { "type": "string", "enum": ["easy", "medium", "hard"] },
    "tags": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "uniqueItems": true,
      "minItems": 0
    },
    "questionBase": {
      "type": "object",
      "required": ["id", "type", "text"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "type": { "type": "string" },
        "text": { "type": "string", "minLength": 1 },
        "explanation": { "type": "string" },
        "difficulty": { "$ref": "#/definitions/difficulty" },
        "tags": { "$ref": "#/definitions/tags" },
        "diagramUrl": { "type": ["string", "null"], "format": "uri-reference" }
      },
      "additionalProperties": true
    },
    "question": {
      "allOf": [
        { "$ref": "#/definitions/questionBase" },
        {
          "oneOf": [
            {
              "properties": { "type": { "const": "multiple_choice" }, "options": { "type": "array", "minItems": 2, "items": { "type": "string" } }, "correctAnswer": { "type": "string" } },
              "required": ["options", "correctAnswer"]
            },
            {
              "properties": { "type": { "const": "open_ended" }, "correctAnswer": { "type": ["string", "number"] } },
              "required": ["correctAnswer"]
            },
            {
              "properties": { "type": { "const": "diagram_based" }, "diagramUrl": { "type": ["string", "null"], "format": "uri-reference" } },
              "required": []
            },
            {
              "properties": { "type": { "const": "true_false" }, "correctAnswer": { "type": "boolean" } },
              "required": ["correctAnswer"]
            },
            {
              "properties": { "type": { "const": "matching" }, "left": { "type": "array", "items": { "type": "string" }, "minItems": 1 }, "right": { "type": "array", "items": { "type": "string" }, "minItems": 1 }, "correctAnswer": { "type": "array", "items": { "type": "integer" } } },
              "required": ["left", "right"]
            }
          ]
        }
      ]
    }
  }
}

